<h1>Editing Book</h1>

<form>
<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local:true do |f| %>
  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>
</form>

<%= link_to "Show", book_path(book.id), "data-confirm" => "Book was successfully updated." %>
