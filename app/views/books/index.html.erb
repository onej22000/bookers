 <h1>Books</h1>

 <p>Title</p>
 <p>Body</p>
 <% @books.each do |book| %>

  <%= book.title %>

  <%= book.body %>
  <span>
   <%= link_to "Show", book_path(book.id) %>
  </span>
  <span>
   <%= link_to "Edit", edit_book_path(book.id) %>
  </span>
  <span>
   <%= link_to "Destroy", "books/#{book.id}", method: :delete,  "data-confirm" => "Are you sure?"%>
  </span>

 <% end %>

 <h2>New book</h2>
 <%= form_with model: @book, url: '/books', method: :post, local: true do |f| %>
    <p>Title</p>

   <%=f.text_field :title %>

    <p>Body</p>

   <%=f.text_area :body %>
   <%= f.submit 'Create Book' %>

 <% end %>

