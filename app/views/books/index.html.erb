<h2>Books</h2>

<% @books.each do |book| %>
 <p>Title</p>
  <span><%= book.title %></span>
 <p>Body</p>
  <span><%= book.body %></span>

<% end %>

<h3>New book</h3>


<%= form_with model: @book,local:true do |f| %>
  <h5>Title</h5>
  <%=f.text_field:title %>


  <h5>Body</h5>
  <%=f.text_area:body %>
  <%=f.submit'Create Book'%>

<% end %>